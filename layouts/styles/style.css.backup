/* Modal fullscreen styles */
.modal-fullscreen .modal-body {
    overflow-y: auto;
}

/* Code container styles */
.code-container {
    background: #f5f5f5;
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 15px;
    font-family: 'Courier New', Courier, monospace;
    font-size: 0.85rem;
    white-space: pre-wrap;
    word-wrap: break-word;
}
