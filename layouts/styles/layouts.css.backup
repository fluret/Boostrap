/* Layout styles for all bootstrap examples */

/* Common styles for all layouts */
.row > div {
    margin-bottom: 15px;
}

/* Header styles */
.header {
    min-height: 90px;
    background: #2f2f2f;
}

/* Footer styles */
.footer {
    min-height: 60px;
    background: #2f2f2f;
}

/* Sidebar styles */
.sidebar {
    min-height: 300px;
    background: #dbdfe5;
}

/* Content styles */
.content {
    min-height: 300px;
    background: #b4bac0;
}

/* Alternate background color */
.content.bg-alt {
    background: #b4bac0;
}

/* Sidebar top (for layout 3) */
.sidebar-top {
    min-height: 140px;
    background: #dbdfe7;
}

/* Sidebar bottom (for layout 3) */
.sidebar-bottom {
    min-height: 145px;
    background: #7e8aa0;
    margin-bottom: -15px;
}

/* Content top (for layout 6) */
.content-top {
    min-height: 150px;
    background: #dbdfe5;
}

/* Content bottom (for layout 6) */
.content-bottom {
    min-height: 120px;
    background: #dbdfe5;
}

.content-bottom.bg-alt {
    background: #b4bac0;
}

/* Intro section (for layouts 7, 8, 9) */
.intro {
    min-height: 250px;
    background: #7e8aa0;
}

/* Generic section (for layouts 7, 8, 9) */
.section {
    min-height: 150px;
    background: #dbdfe5;
}

.section.bg-alt {
    background: #b4bac0;
}
